#include<stdio.h>
  int main(void)
  {  
 int retry;
 do{
 	int no;
 	printf("请输入一个整数：");
 scanf("%d",&no);
 	if (no==0)
 	 puts("该整数为0。[是否继续—(Yes......[按0])\(no......[按9])]");
	  else if (no>0)
	   puts("该整数为正数。[是否继续—(Yes......[按0])\(no......[按9])]");
	   else
	   puts("该整数为负数。[是否继续—(Yes......[按0])\(no......[按9])]"); 

	   printf("是否继续？请选择：");scanf("%d",&retry); 
 }while (retry==0);
		  return 0;
   } 
